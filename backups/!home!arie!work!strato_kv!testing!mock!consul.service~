[Unit]
Description=Consul
Requires=network.target
After=network.target strato-netmanager.service clusterjoiner.service

[Service]
Type=dbus
BusName=strato.consul
ExecStart=/usr/bin/consul-runner
SuccessExitStatus=0 SIGINT
StartLimitInterval=0
TimeoutStartSec=0
KillSignal=SIGKILL
Nice=-20

[Install]
WantedBy=multi-user.target
